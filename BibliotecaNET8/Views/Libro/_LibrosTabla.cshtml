@model PagedResult<LibroListVM>

@if (!Model.Items.Any())
{
    <div class="libro-alert libro-alert-info" role="alert">
        <span class="font-medium">@Localizer["LibrosSearchNotFound"]</span>
    </div>
}
else
{
    <!-- Enlaces de navegación -->
    @await Html.PartialAsync("_Pagination", Model)

    <table class="text-gray-500 w-full text-left text-sm">
        <thead class="bg-gray-100 text-gray-700 text-xs">
            <tr>
                <th scope="col" class="p-4">
                    <div class="flex items-center">
                        <input name="allIdsLibro" type="checkbox" class="libro-checkbox-input">
                        <label for="checkbox-all-search" class="sr-only">checkbox</label>
                    </div>
                </th>
                <th scope="col" class="px-6 py-3">@Html.DisplayNameFor(model => model.Items.First().Titulo)</th>
                <th scope="col" class="px-6 py-3">@Html.DisplayNameFor(model => model.Items.First().AutorId)</th>
                <th scope="col" class="px-6 py-3">@Html.DisplayNameFor(model => model.Items.First().CategoriaId)</th>
                <th scope="col" class="px-6 py-3">@Html.DisplayNameFor(model => model.Items.First().ISBN)</th>
                <th scope="col" class="px-6 py-3">@Html.DisplayNameFor(model => model.Items.First().FechaPublicacion)</th>
                <th scope="col" class="px-6 py-3">@Localizer["AccionesTitle"]</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var libro in Model.Items)
            {
                <tr class="bg-white border-b">
                    <td class="w-4 p-4">
                        <div class="flex items-center">
                            <input name="idsAutor" type="checkbox" value="@libro.Id" class="libro-checkbox-input">
                            <label for="checkbox-table-search-1" class="sr-only">checkbox</label>
                        </div>
                    </td>
                    <td scope="row" class="libro-table-row-content">@libro.Titulo</td>
                    <td scope="row" class="libro-table-row-content">@($"{libro.Autor.Nombre} {libro.Autor.Apellido}")</td>
                    <td scope="row" class="libro-table-row-content">@libro.Categoria.Nombre</td>
                    <td scope="row" class="libro-table-row-content">@libro.ISBN</td>
                    <td scope="row" class="libro-table-row-content">@libro.FechaPublicacion.ToShortDateString()</td>
                    <td class="px-6 py-4">
                        <a asp-route="libroVer" asp-route-id="@libro.Id" class="libro-btn libro-btn-info">@Localizer["VerButton"]</a>
                        <a asp-route="libroEdit" asp-route-id="@libro.Id" class="libro-btn libro-btn-edit">@Localizer["ModificarButton"]</a>
                        <a asp-route="libroDelete" asp-route-id="@libro.Id" onclick="Eliminar(this.href); return false;" class="libro-btn libro-btn-delete cursor-pointer">@Localizer["EliminarButton"]</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="my-4">
        <a asp-route="libroDeleteMultiple" onclick="EliminarSeleccionados(this.href); return false;" class="libro-btn libro-btn-delete">@Localizer["EliminarSelectedButton"]</a>
    </div>
}

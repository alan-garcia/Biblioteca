@model PagedResult<AutorVM>

<h1 class="bbtc-title">@Localizer["ListaAutoresTitle"]</h1>

<div class="mb-6 mt-8">
    <a asp-route="autorCreate" class="bbtc-btn bbtc-btn-info">
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="icon icon-tabler icons-tabler-outline icon-tabler-plus"><path stroke="none" d="M0 0h24v24H0z" fill="none" /><path d="M12 5l0 14" /><path d="M5 12l14 0" />
        </svg>
        @Localizer["CrearAutorButton"]
    </a>
</div>

@if (TempData["AutoresMensaje"] != null)
{
    <div class="bbtc-alert bbtc-alert-success" role="alert">
        <span class="font-medium">@TempData["AutoresMensaje"]</span>
    </div>
}

@if (ViewBag.ListaAutores != null)
{
    <div class="bbtc-alert bbtc-alert-info" role="alert">
        <span class="font-medium">@ViewBag.ListaAutores</span>
    </div>
}
else 
{
    <div class="relative overflow-x-auto shadow-md sm:rounded-md">
        <div class="bg-white pb-4">
            <label for="filterSearch" class="sr-only">Search</label>
            <div class="relative mt-1">
                <div class="pointer-events-none absolute inset-y-0 start-0 flex items-center ps-3">
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="icon icon-tabler icons-tabler-outline icon-tabler-search"><path stroke="none" d="M0 0h24v24H0z" fill="none" /><path d="M10 10m-7 0a7 7 0 1 0 14 0a7 7 0 1 0 -14 0" /><path d="M21 21l-6 -6" />
                    </svg>
                </div>
                <input type="text" name="filterSearch" onkeyup="Search('/Autor/Search');" class="bbtc-search-filter-input" placeholder='@(Localizer["AutorSearchPlaceholder"])' autofocus>
            </div>
        </div>

        <div id="dataBody">
            @await Html.PartialAsync("_AutoresTabla", Model)
        </div>
    </div>
}

@{
    var currentUrl = Context.Request.Path;
}
<!DOCTYPE html>
<html lang="es">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Biblioteca</title>
        <link rel="stylesheet" href="~/css/tailwind.output.css" />
        <link rel="stylesheet" href="~/css/styles.css" />
    </head>
    <body>
        <header>
            <nav class="z-20 w-full border-b border-gray-200 bg-white bg-gray-200 shadow-md">
                <div class="container mx-auto flex flex-wrap items-center justify-between p-4">
                    <a asp-route="home" class="flex items-center space-x-3">
                        <span class="self-center whitespace-nowrap text-2xl font-semibold text-gray-600">Biblioteca</span>
                    </a>
                    <div class="flex space-x-3 md:order-2 md:space-x-0">
                        <button onclick="menuResponsiveToggle(this)" data-collapse-toggle="navbar-sticky" type="button" class="inline-flex h-10 w-10 items-center justify-center rounded-lg bg-gray-200 p-2 text-sm text-gray-700 hover:bg-gray-300 focus:outline-none focus:ring-2 focus:ring-gray-200 focus:ring-gray-200 md:hidden" aria-controls="navbar-sticky" aria-expanded="false">
                            <span class="sr-only">Abrir menú</span>
                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="icon icon-tabler icons-tabler-outline icon-tabler-menu-2"><path stroke="none" d="M0 0h24v24H0z" fill="none" /><path d="M4 6l16 0" /><path d="M4 12l16 0" /><path d="M4 18l16 0" />
                            </svg>
                        </button>
                    </div>
                    <div class="nav-links hidden w-full items-center justify-end md:flex md:w-auto md:order-1" id="navbar-sticky">
                        <ul class="mt-4 flex flex-col rounded-lg border border-gray-400 bg-white p-4 font-medium md:p-0 md:space-x-8 md:flex-row md:mt-0 md:border-0">
                            <li>
                                <a asp-route="home" class="bbtc-menu-option bg-transparent text-blue-500" aria-current="page">@Localizer["InicioMenuOption"]</a>
                            </li>
                            <li>
                                <a asp-route="autorIndex" class="bbtc-menu-option bg-transparent text-blue-500" aria-current="page">@Localizer["AutoresMenuOption"]</a>
                            </li>
                            <li>
                                <a asp-route="categoriaIndex" class="bbtc-menu-option bg-transparent text-blue-500" aria-current="page">@Localizer["CategoriasMenuOption"]</a>
                            </li>
                            <li>
                                <a asp-route="clienteIndex" class="bbtc-menu-option bg-transparent text-blue-500" aria-current="page">@Localizer["ClientesMenuOption"]</a>
                            </li>
                            <li>
                                <a asp-route="libroIndex" class="bbtc-menu-option bg-transparent text-blue-500" aria-current="page">@Localizer["LibrosMenuOption"]</a>
                            </li>
                            <li>
                                <a asp-route="prestamoIndex" class="bbtc-menu-option bg-transparent text-blue-500" aria-current="page">@Localizer["PrestamosMenuOption"]</a>
                            </li>
                            <li>
                                <button id="dropdownNavbar" onclick="changeLanguageToggle();" data-dropdown-toggle="languageDropdown" class="bbtc-menu-dropdown bg-transparent text-blue-500">@Localizer["IdiomasMenuOption"]
                                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="icon icon-tabler icons-tabler-outline icon-tabler-chevron-down"><path stroke="none" d="M0 0h24v24H0z" fill="none" /><path d="M6 9l6 6l6 -6" />
                                    </svg>
                                </button>
                                <!-- Dropdown menu -->
                                <div id="languageDropdown" class="z-10 absolute hidden w-44 rounded-lg border bg-white font-normal shadow-md md:-translate-x-4 md:translate-y-4">
                                    <ul class="py-2 text-sm text-gray-400" aria-labelledby="dropdownLargeButton">
                                        <li>
                                        <a asp-route="setLanguage" asp-route-culture="es" asp-route-returnUrl="@currentUrl" class="bbtc-dropdown-menu-option" aria-current="page">Español</a>
                                        </li>
                                        <li>
                                        <a asp-route="setLanguage" asp-route-culture="en" asp-route-returnUrl="@currentUrl" class="bbtc-dropdown-menu-option" aria-current="page">English</a>
                                        </li>
                                    </ul>
                                </div>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
        </header>

        <div class="container mx-auto">
            <main role="main" class="mb-32">
                @RenderBody()
            </main>
        </div>

        <footer class="z-20 fixed bottom-0 left-0 w-full border-t border-gray-200 bg-white p-4 shadow dark:bg-gray-800 dark:border-gray-600 md:flex md:items-center md:justify-between md:p-6">
            <span class="text-sm text-gray-500 dark:text-gray-400 sm:text-center">
                © 2024 - Biblioteca
            </span>
        </footer>

        <script src="~/js/main.js" asp-append-version="true"></script>
        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
        @await RenderSectionAsync("Scripts", required: false)
    </body>
</html>

@{
    var currentUrl = Context.Request.Path;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>BibliotecaNET8</title>
    <link rel="stylesheet" href="~/css/tailwind.output.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="border-gray-200 bg-white z-20 w-full border-b dark:bg-gray-900 dark:border-gray-600">
            <div class="p-4 mx-auto flex max-w-screen-xl flex-wrap items-center justify-between">
                <a asp-route="home" class="space-x-3 flex items-center rtl:space-x-reverse">
                    <img src="https://flowbite.com/docs/images/logo.svg" class="h-8" alt="Flowbite Logo">
                    <span class="self-center whitespace-nowrap text-2xl font-semibold dark:text-white">BibliotecaNET8</span>
                </a>
                <div class="space-x-3 flex rtl:space-x-reverse md:order-2 md:space-x-0">
                    <button data-collapse-toggle="navbar-sticky" type="button" class="h-10 w-10 p-2 text-gray-500 inline-flex items-center justify-center rounded-lg text-sm hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-gray-200 dark:text-gray-400 md:hidden dark:hover:bg-gray-700 dark:focus:ring-gray-600" aria-controls="navbar-sticky" aria-expanded="false">
                        <span class="sr-only">Open main menu</span>
                        <svg class="h-5 w-5" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 17 14">
                            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 1h15M1 7h15M1 13h15" />
                        </svg>
                    </button>
                </div>
                <div class="hidden w-full items-center justify-between md:flex md:w-auto md:order-1" id="navbar-sticky">
                    <ul class="mt-4 border-gray-100 bg-gray-50 p-4 flex flex-col rounded-lg border font-medium rtl:space-x-reverse dark:bg-gray-800 dark:border-gray-700 md:p-0 md:space-x-8 md:flex-row md:mt-0 md:border-0 md:bg-white md:dark:bg-gray-900">
                        <li>
                            <a asp-route="home" class="bg-blue-700 px-3 py-2 text-white block rounded md:bg-transparent md:text-blue-700 md:p-0 md:dark:text-blue-500" aria-current="page">Inicio</a>
                        </li>
                        <li>
                            <a asp-route="autorIndex" class="bg-blue-700 px-3 py-2 text-white block rounded md:bg-transparent md:text-blue-700 md:p-0 md:dark:text-blue-500" aria-current="page">Autores</a>
                        </li>
                        <li>
                            <a asp-route="categoriaIndex" class="bg-blue-700 px-3 py-2 text-white block rounded md:bg-transparent md:text-blue-700 md:p-0 md:dark:text-blue-500" aria-current="page">Categorías</a>
                        </li>
                        <li>
                            <a asp-route="clienteIndex" class="bg-blue-700 px-3 py-2 text-white block rounded md:bg-transparent md:text-blue-700 md:p-0 md:dark:text-blue-500" aria-current="page">Clientes</a>
                        </li>
                        <li>
                            <a asp-route="libroIndex" class="bg-blue-700 px-3 py-2 text-white block rounded md:bg-transparent md:text-blue-700 md:p-0 md:dark:text-blue-500" aria-current="page">Libros</a>
                        </li>
                        <li>
                            <a asp-route="prestamoIndex" class="bg-blue-700 px-3 py-2 text-white block rounded md:bg-transparent md:text-blue-700 md:p-0 md:dark:text-blue-500" aria-current="page">Préstamos</a>
                        </li>
                        <li>
                            <a asp-route="setLanguage" asp-route-culture="es" asp-route-returnUrl="@currentUrl" class="bg-blue-700 px-3 py-2 text-white block rounded md:bg-transparent md:text-blue-700 md:p-0 md:dark:text-blue-500" aria-current="page">Español</a>
                        </li>
                        <li>
                            <a asp-route="setLanguage" asp-route-culture="en" asp-route-returnUrl="@currentUrl" class="bg-blue-700 px-3 py-2 text-white block rounded md:bg-transparent md:text-blue-700 md:p-0 md:dark:text-blue-500" aria-current="page">English</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container mx-auto">
        <main role="main" class="mb-32">
            @RenderBody()
        </main>
    </div>

    <footer class="bottom-0 left-0 border-gray-200 bg-white p-4 fixed z-20 w-full border-t shadow dark:bg-gray-800 dark:border-gray-600 md:flex md:items-center md:justify-between md:p-6">
        <span class="text-gray-500 text-sm dark:text-gray-400 sm:text-center">
            © 2024 - BibliotecaNET8
        </span>
    </footer>

    <script src="~/js/main.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

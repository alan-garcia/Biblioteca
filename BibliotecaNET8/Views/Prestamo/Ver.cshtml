@model PrestamoCreateVM

<h1 class="bbtc-title">@Localizer["VerPrestamoTitle"]</h1>

<form class="mx-auto mt-10 max-w-md">
    <div class="z-0 group relative mb-5 w-full">
        <input asp-for="FechaPrestamo" class="border-0 border-b-2 peer block w-full appearance-none border-gray-300 bg-transparent px-0 py-2.5 text-sm text-gray-900 focus:outline-none focus:ring-0 focus:border-blue-600" disabled />
        <label asp-for="FechaPrestamo" class="-translate-y-6 -z-10 origin-[0] absolute top-3 scale-75 transform text-sm text-gray-500 duration-300 peer-focus:font-medium peer-focus:start-0 peer-focus:text-blue-600 peer-placeholder-shown:scale-100 peer-placeholder-shown:translate-y-0 peer-focus:scale-75 peer-focus:-translate-y-6">@Html.DisplayNameFor(model => model.FechaPrestamo)</label>
    </div>
    <div class="z-0 group relative mb-5 w-full">
        <input asp-for="FechaDevolucion" class="border-0 border-b-2 peer block w-full appearance-none border-gray-300 bg-transparent px-0 py-2.5 text-sm text-gray-900 focus:outline-none focus:ring-0 focus:border-blue-600" disabled />
        <label asp-for="FechaDevolucion" class="-translate-y-6 -z-10 origin-[0] absolute top-3 scale-75 transform text-sm text-gray-500 duration-300 peer-focus:font-medium peer-focus:start-0 peer-focus:text-blue-600 peer-placeholder-shown:scale-100 peer-placeholder-shown:translate-y-0 peer-focus:scale-75 peer-focus:-translate-y-6">@Html.DisplayNameFor(model => model.FechaDevolucion)</label>
    </div>
    <div class="z-0 group relative mb-5 w-full">
        <label class="mb-2 block text-sm font-medium text-gray-900">@Html.DisplayNameFor(model => model.LibroId)</label>
        <select asp-for="LibroId" asp-items="Model.Libros" class="block w-full rounded-lg border border-gray-300 bg-gray-50 p-2.5 text-sm text-gray-900 focus:ring-blue-500 focus:border-blue-500" disabled></select>
    </div>
    <div class="z-0 group relative mb-5 w-full">
        <label class="mb-2 block text-sm font-medium text-gray-900">@Html.DisplayNameFor(model => model.ClienteId)</label>
        <select asp-for="ClienteId" asp-items="Model.Clientes" class="block w-full rounded-lg border border-gray-300 bg-gray-50 p-2.5 text-sm text-gray-900 focus:ring-blue-500 focus:border-blue-500" disabled></select>
    </div>

    <a asp-route="prestamoIndex" class="bbtc-btn bbtc-btn-info">
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="icon icon-tabler icons-tabler-outline icon-tabler-arrow-left">
            <path stroke="none" d="M0 0h24v24H0z" fill="none" />
            <path d="M5 12l14 0" />
            <path d="M5 12l6 6" />
            <path d="M5 12l6 -6" />
        </svg>
        @Localizer["VolverButton"]
    </a>
</form>

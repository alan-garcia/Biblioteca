@model PrestamoCreateVM

<h1 class="bbtc-title">@Localizer["CrearPrestamoTitle"]</h1>

<form method="post" asp-route="prestamoCreate" class="mx-auto mt-10 max-w-md">
    <div class="z-0 group relative mb-5 w-full">
        <input asp-for="FechaPrestamo" class="border-0 border-b-2 peer block w-full appearance-none border-gray-300 bg-transparent px-0 py-2.5 text-sm text-gray-900 focus:outline-none focus:ring-0 focus:border-blue-600" placeholder=" " autofocus required />
        <label asp-for="FechaPrestamo" class="-translate-y-6 -z-10 origin-[0] absolute top-3 scale-75 transform text-sm text-gray-500 duration-300 peer-focus:font-medium peer-focus:start-0 peer-focus:text-blue-600 peer-placeholder-shown:scale-100 peer-placeholder-shown:translate-y-0 peer-focus:scale-75 peer-focus:-translate-y-6">
            @Html.DisplayNameFor(model => model.FechaPrestamo)
        </label>
        <span asp-validation-for="FechaPrestamo" class="text-red-600"></span>
    </div>
    <div class="z-0 group relative mb-5 w-full">
        <input asp-for="FechaDevolucion" class="border-0 border-b-2 peer block w-full appearance-none border-gray-300 bg-transparent px-0 py-2.5 text-sm text-gray-900 focus:outline-none focus:ring-0 focus:border-blue-600" placeholder=" " required />
        <label asp-for="FechaDevolucion" class="-translate-y-6 -z-10 origin-[0] absolute top-3 scale-75 transform text-sm text-gray-500 duration-300 peer-focus:font-medium peer-focus:start-0 peer-focus:text-blue-600 peer-placeholder-shown:scale-100 peer-placeholder-shown:translate-y-0 peer-focus:scale-75 peer-focus:-translate-y-6">@Html.DisplayNameFor(model => model.FechaDevolucion)</label>
        <span asp-validation-for="FechaDevolucion" class="text-red-600"></span>
    </div>
    <div class="z-0 group relative mb-5 w-full">
        <label class="mb-2 block text-sm font-medium text-gray-900">@Html.DisplayNameFor(model => model.LibroId)</label>
        <select asp-for="LibroId" asp-items="Model.Libros" class="block w-full rounded-lg border border-gray-300 bg-gray-50 p-2.5 text-sm text-gray-900 focus:ring-blue-500 focus:border-blue-500"></select>
        <span asp-validation-for="LibroId" class="text-red-600"></span>
    </div>
    <div class="z-0 group relative mb-5 w-full">
        <label class="mb-2 block text-sm font-medium text-gray-900">@Html.DisplayNameFor(model => model.ClienteId)</label>
        <select asp-for="ClienteId" asp-items="Model.Clientes" class="block w-full rounded-lg border border-gray-300 bg-gray-50 p-2.5 text-sm text-gray-900 focus:ring-blue-500 focus:border-blue-500"></select>
        <span asp-validation-for="ClienteId" class="text-red-600"></span>
    </div>

    <button type="submit" class="bbtc-btn bbtc-btn-info mr-2">@Localizer["CrearButton"]</button>
    <a asp-route="prestamoIndex" class="bbtc-btn bbtc-btn-light">
        <icon href="arrow-left-icon" class="size-6"></icon> @Localizer["VolverButton"]
    </a>
</form>

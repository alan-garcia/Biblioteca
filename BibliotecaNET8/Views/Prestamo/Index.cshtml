@model PagedResult<PrestamoListVM>

<h1 class="bbtc-title">@Localizer["ListaPrestamosTitle"]</h1>

<div class="mb-6 mt-8">
    <a asp-route="prestamoCreate" class="bbtc-btn bbtc-btn-info">
        <icon href="add-icon" class="size-6"></icon> @Localizer["CrearPrestamoButton"]</a>
</div>

@if (TempData["PrestamoMensajes"] != null)
{
    <div class="bbtc-alert bbtc-alert-success" role="alert">
        <span class="font-medium">@TempData["PrestamoMensajes"]</span>
    </div>
}

@if (TempData["ExisteLibroClienteCreate"] != null)
{
    <div class="bbtc-alert bbtc-alert-info" role="alert">
        <span class="font-medium">@TempData["ExisteLibroClienteCreate"]</span>
    </div>
}

@if (ViewBag.ListaPrestamos != null)
{
    <div class="bbtc-alert bbtc-alert-info" role="alert">
        <span class="font-medium">@ViewBag.ListaPrestamos</span>
    </div>
}
else
{
    <div class="relative overflow-x-auto shadow-md sm:rounded-lg">
        <div class="bg-white pb-4">
            <label for="filterSearch" class="sr-only">Search</label>
            <div class="relative mt-1">
                <div class="pointer-events-none absolute inset-y-0 start-0 flex items-center ps-3">
                    <icon href="search-icon" class="size-6"></icon>
                </div>
                <input type="text" name="filterSearch" onkeyup="Search('/Prestamo/Search');" class="bbtc-search-filter-input" placeholder='@(Localizer["PrestamoSearchPlaceholder"])' autofocus>
            </div>
        </div>

        <div id="dataBody">
            @await Html.PartialAsync("_PrestamosTabla", Model)
        </div>
    </div>
}
